{
  "name": "@tokens-studio/tokenscript-schemas",
  "version": "0.1.2",
  "description": "Schema registry for TokenScript with bundled schemas and validation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tokenscript-schemas": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "bundled",
    "README.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:debug": "LOG_LEVEL=debug vitest run",
    "test:verbose": "LOG_LEVEL=info vitest run",
    "check": "biome ci . --diagnostic-level=error",
    "lint": "biome lint --max-diagnostics=none .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "fix": "biome check --write .",
    "ts:typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.tests.json && tsc --noEmit -p tsconfig.scripts.json",
    "cli": "tsx src/cli/index.ts",
    "cli:presets": "tsx src/cli/index.ts",
    "download": "tsx scripts/download-schemas.ts",
    "update-versions": "tsx scripts/update-versions.ts",
    "bundle": "tsx scripts/bundle-schemas.ts",
    "push": "tsx scripts/push-to-registry.ts",
    "demo:parity": "tsx scripts/generate-demo.ts",
    "demo:advanced": "tsx scripts/generate-advanced-demo.ts",
    "demo:functions": "tsx scripts/generate-functions-playground.ts",
    "demo:paths": "tsx scripts/generate-path-explorer.ts",
    "demo:all": "npm run demo:parity && npm run demo:advanced && npm run demo:functions && npm run demo:paths",
    "colorjs:compare": "tsx scripts/compare-colorjs.ts",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "tokenscript",
    "schema",
    "registry",
    "validation"
  ],
  "author": "Tokens Studio (https://tokens.studio)",
  "license": "MPL-2.0",
  "dependencies": {
    "@tokens-studio/tokenscript-interpreter": "^0.17.1",
    "arktype": "^2.1.25",
    "cac": "^6.7.14",
    "ulog": "^2.0.0-beta.19"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^22.18.6",
    "colorjs.io": "^0.6.0-beta.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
