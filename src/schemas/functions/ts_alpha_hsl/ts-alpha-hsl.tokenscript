// ts_alpha_hsl: Set alpha on a color in HSL space
// Converts to HSL, sets alpha, clamps 0-1

variable input: List = {input};
variable color: Color.HSL = input.get(0).to.hsl();
variable target_alpha: Number = input.get(1);

if (target_alpha < 0) [ target_alpha = 0; ];
if (target_alpha > 1) [ target_alpha = 1; ];

variable result: Color.HSL;
result.h = color.h;
result.s = color.s;
result.l = color.l;
result.alpha = target_alpha;

return result;
